/**
 * Computes the sum of three bits.
 */

CHIP FullAdder {
    IN a, b, c;  // 1-bit inputs
    OUT sum,     // Right bit of a + b + c
        carry;   // Left bit of a + b + c

    PARTS:
    // Put you code here:
    Xor(a=a, b=b, out=x);
    Xor(a=x, b=c, out=sum);
    And(a=c, b=x, out=y);
    And(a=a, b=b, out=z);
    Or(a=y, b=z, out=carry);
}